// Menu
.menu
  position fixed
  display none
  width 100vw
  height 100vh
  top 0
  left 0
  background-color rgba(255, 255, 255, 0.7)
  -webkit-backdrop-filter saturate(180%) blur(10px)
  backdrop-filter saturate(180%) blur(10px)
  z-index 100
  .menu-container
    width 100%
    height 100%
    display flex
    justify-content center
    align-items center
    .menu-content
      padding 0
      display flex
      @media (min-width 576px)
        position absolute
        top 40%
      @media (max-width 576px)
        flex-direction column
      .menu-item
        font-size 2em
        list-style none
        margin 5px 10px
        a.active
          text-decoration line-through
    .menu-close
      position absolute
      right 15px
      top 15px
      cursor pointer
      i
        color var(--color-text)
        font-size 24px
    .menu-copyright
      position absolute
      bottom 20px
      width 100%
      text-align center
      @media (max-width 576px)
        font-size 0.75em